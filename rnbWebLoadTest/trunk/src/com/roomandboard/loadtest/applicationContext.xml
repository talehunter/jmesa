<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
                            http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                            http://www.springframework.org/schema/context
                            http://www.springframework.org/schema/context/spring-context-2.5.xsd
                            http://www.springframework.org/schema/tx
                            http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
                            http://www.springframework.org/schema/lang
                            http://www.springframework.org/schema/lang/spring-lang-2.0.xsd
                            http://www.springframework.org/schema/util 
                            http://www.springframework.org/schema/util/spring-util-2.0.xsd" >
                                
    <context:annotation-config/>
    <context:component-scan base-package="com.roomandboard.contact" />

    <bean 
        id="propertyConfigurer"
        class="com.roomandboard.config.PropertyConfigurer" >
        <property
            name="configLocation"
            value="classpath:com/roomandboard/config" />
    </bean>
    
    <bean 
        id="dataSource"
        class="com.mchange.v2.c3p0.ComboPooledDataSource"
        destroy-method="close">
        <property
            name="driverClass"
            value="${connection.driver_class}" />
        <property
            name="jdbcUrl"
            value="${connection.url}" />
        <property
            name="user"
            value="${connection.username}" />
        <property
            name="password"
            value="${connection.password}" />
        <property
            name="autoCommitOnClose"
            value="true" />
    </bean>

    <bean
        id="jdbcTemplate"
        class="org.springframework.jdbc.core.JdbcTemplate">
        <constructor-arg ref="dataSource" />
    </bean>
    
    <bean
        id="productCacheLoaderDao"
        class="com.roomandboard.loadtest.ProductCacheLoaderDao">
        <constructor-arg ref="jdbcTemplate" />
    </bean>
    
    <bean
        id="productCacheLoader"
        class="com.roomandboard.loadtest.ProductCacheLoader">
        <constructor-arg ref="productCacheLoaderDao" />
        <constructor-arg ref="webSiteProductControllerUrl" />
    </bean>
    
    <bean 
        id="webSiteProductControllerUrl" 
        class="java.lang.String">
        <constructor-arg 
            value="${webSiteProductControllerUrl}" />
    </bean>

</beans>
