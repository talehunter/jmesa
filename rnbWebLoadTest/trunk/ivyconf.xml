<ivyconf>
 	<property name="ibiblio-maven2-root" value="http://mirrors.sunsite.dk/maven2/" override="false" />
    <property name="maven2.pattern" value="[organisation]/[module]/[revision]/[module]-[revision]" />
    <property name="maven2.pattern.ext" value="${maven2.pattern}.[ext]" />
    <conf defaultResolver="default"/>
    <resolvers>
		<filesystem name="local">
            <ivy pattern="/var/www/html/ivy/[organisation]/[module]/ivy-[revision].xml"/>
            <artifact pattern="/var/www/html/ivy/[organisation]/[module]/[type]s/[artifact]-[revision].[ext]"/>
		</filesystem>
		<url name="roomandboard">
		    <ivy pattern="http://webdev.roomandboard.com/ivy/[organisation]/[module]/ivy-[revision].xml"/>
		    <artifact pattern="http://webdev.roomandboard.com/ivy/[organisation]/[module]/[type]s/[artifact]-[revision].[ext]"/>
		</url>
		<ibiblio name="maven2" root="${ibiblio-maven2-root}" pattern="${maven2.pattern.ext}" m2compatible="true" /> 
        <chain name="default">
            <resolver ref="local"/>
            <resolver ref="roomandboard"/>
        </chain>
    </resolvers>
</ivyconf>
